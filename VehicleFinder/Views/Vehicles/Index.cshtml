@using VehicleFinder.Models
@model List<Vehicle>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}




@if (Model.Count < 1)
{
	<div style="margin-top: 24px" class="alert alert-dismissible alert-primary">
		<button type="button" class="close" data-dismiss="alert">&times;</button>
		<strong>No cars at this time.</strong> Change a few things up and try submitting again.
	</div>
}
else
{
	
	<span class="badge badge-secondary">@Model.Count cars found.</span>


	<table class="table table-hover">
		<thead>
		<tr>
			<th scope="col">Make</th>
			<th scope="col">Model</th>
			<th scope="col">Year</th>
			<th scope="col">Image</th>
		</tr>
		</thead>

		<tbody>
		@foreach (var x in Model)
		{
			<tr class="table-dark">
				<th contenteditable="true">@x.VehicleMake</th>  @* can edit this text, but Doesn't save back...yet*@
				<td >@Html.ActionLink(@x.VehicleModel, "Details", new { id = x.VehicleId })</td>
				<td>@x.VehicleYear</td>
				<td><img src="@x.ImageUrl" alt="@x.VehicleModel image" height="100"></td>
			</tr>
		}
		</tbody>
		<tfoot class="">
		<tr>
			<th>Make</th>
			<th>Model</th>
			<th>Year</th>
			<th>Image</th>
		</tr>
		</tfoot>

	</table>



}



